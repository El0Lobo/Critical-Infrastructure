# Environment: development, test, staging, production
DJANGO_ENV=development

DJANGO_DEBUG=True
SECRET_KEY=changeme-super-secret
ALLOWED_HOSTS=localhost,127.0.0.1
DATABASE_URL=sqlite:///db.sqlite3
REDIS_URL=redis://redis:6379/0
DOMAIN=example.local
ACME_EMAIL=you@example.com
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1
# Required for encrypted fields
# FIELD_ENCRYPTION_KEY is legacy (single key).
FIELD_ENCRYPTION_KEY=
# FIELD_ENCRYPTION_KEYS is preferred (comma-separated) for key rotation; first key is used for new writes.
FIELD_ENCRYPTION_KEYS=
# Security (production)
SECURE_HSTS_SECONDS=31536000
USE_PROXY_SSL_HEADER=False
